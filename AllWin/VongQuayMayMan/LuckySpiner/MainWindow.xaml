<Window x:Class="LuckySpiner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LuckySpiner"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Icon="pack://application:,,,/Resources/windowIcon.png"
        Title="Vòng quay may mắn" Height="260" Width="390">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Image Source="pack://application:,,,/Resources/text_vongquay.png" Stretch="Uniform"/>
        <Button x:Name="btn" Content="Vui lòng chọn ảnh" Grid.Row="1" VerticalAlignment="Stretch"  HorizontalAlignment="Stretch" Click="Button_Click"/>
    </Grid>
</Window>
